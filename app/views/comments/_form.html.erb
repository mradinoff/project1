<%= form_for @comment do |f| %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :blog %>
  <%= f.text_field :blog %>

  <%= f.label :place_id %>
  <%= f.select :place_id, Place.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>
