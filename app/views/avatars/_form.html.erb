<%= form_for @avatar do |f| %>
  <%= f.label :display_name %>
  <%= f.text_field :display_name, :autofocus => true %>

  <%= f.label :display_photo %>
  <%= f.text_field :display_photo %>

  <%= f.label :interests %>
  <%= f.text_field :interests %>

  <%= f.label :dob, 'Date of birth' %>
  <%= f.text_field :dob %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :hiking_ability %>
  <%= f.text_field :hiking_ability %>

  <%= f.submit %>
<% end %>
